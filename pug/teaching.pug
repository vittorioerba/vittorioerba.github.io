include includes/mixins.pug
include includes/data.pug

+page_skeleton
    .fl.w-100.pb4.tc
        +section_title
            div
                | Teaching
        .pt3
            .flex.flex-wrap.justify-around
                +float_box
                    h1.f3.black.b
                        | Student supervision
                    hr.mw5.bb.bw1.b--black-10
                    table.f5.w-100.mw8.center(cellspacing='0')
                        thead
                            tr
                                th.fw6.bb.b--black-20.tr.pb3.pr3.bg-white(colspan=4)
                        tbody.lh-copy
                            +table_separator
                            each item in supervised
                                tr
                                    +table_line
                                        .tc.tr-m.tr-l !{item.date}
                                    +table_line 

                                        .tc !{item.student}
                                        if item.nowAt
                                            if item.urlAt
                                                +link(item.urlAt) !{item.nowAt}
                                            else
                                                | !{item.nowAt}

                                    if item.url
                                        +table_line
                                            .tc.tl-m.tl-l
                                                +link(item.url) !{item.type}
                                    else
                                        +table_line 
                                            .tc.tl-m.tl-l !{item.type}

                                +table_separator

                    p.center.mt3.f5
                        +link("mailto:vittorio.erba@unimi.it") Contact me 
                        | if you are interested in working with me on your thesis project!
                
                +float_box
                    h1.f3.black.b
                        | Tutoring
                    hr.mw5.bb.bw1.b--black-10
                    table.f5.w-100.mw8.center(cellspacing='0')
                        thead
                            tr
                                th.fw6.bb.b--black-20.tr.pb3.pr3.bg-white(colspan=4)
                        tbody.lh-copy
                            +table_separator
                            each item in tutoring
                                tr
                                    +table_line
                                        .tc.tr-m.tr-l !{item.date}
                                    if item.url
                                        +table_line
                                            .tc.tl-m.tl-l
                                                +link(item.url) !{item.course}
                                    else
                                        +table_line 
                                            .tc.tl-m.tl-l !{item.course}
                                +table_separator
            +float_clear

